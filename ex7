class Guerreiro extends Personagem {
    private int forca;

    public Guerreiro(int energia) {
        super(energia);
    }

    public void definirForca(int forca) {
        this.forca = forca;
    }

    @Override
    public void atacar() {
        System.out.println("Guerreiro ataca com " + forca + " de for√ßa!");
    }
}

Main.java

public class Main {
    public static void main(String[] args) {
        Mago mago = new Mago(100);
        mago.definirMana(50);
        mago.atacar();

        Guerreiro guerreiro = new Guerreiro(200);
        guerreiro.definirForca(80);
        guerreiro.atacar();
    }
}
